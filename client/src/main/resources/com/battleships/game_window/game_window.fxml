<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<GridPane hgap="20" prefHeight="400.0" prefWidth="600.0"
          xmlns="http://javafx.com/javafx/8.0.121"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.battleships.game_window.GameWindowController">
    <GridPane fx:id="myBoard" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <GridPane fx:id="opponentBoard" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <Button fx:id="imReadyBut" text="I'm ready to play!" GridPane.rowIndex="2" GridPane.columnIndex="0" onAction="#sendToActivePlayerIamReady"/>
</GridPane>


